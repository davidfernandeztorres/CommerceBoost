<Window x:Class="CommerceBoost.Views.SalesManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Ventas y Reportes" Height="600" Width="900"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F1F5F9">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Gestión de Ventas y Reportes" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" Foreground="#1E293B"/>

        <TabControl Grid.Row="1" BorderThickness="0" Background="Transparent">
            <TabItem Header="Resumen Diario" FontSize="16" Padding="10">
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="{Binding DailyTotal, StringFormat='Total Ventas Hoy: {0:C}'}" FontSize="18" Margin="0,0,0,10"/>
                    <TextBlock Text="{Binding DailySalesCount, StringFormat='Tickets Emitidos: {0}'}" FontSize="18" Margin="0,0,0,10"/>
                    <Button Content="Imprimir Cierre Z" Command="{Binding ImprimirCierreZCommand}" Padding="15,10" HorizontalAlignment="Left" Margin="0,20,0,0" Background="#1E3A8A" Foreground="White" FontWeight="SemiBold" BorderThickness="0">
                         <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="6"/>
                            </Style>
                        </Button.Resources>
                    </Button>
                </StackPanel>
            </TabItem>
            <TabItem Header="Historial de Tickets" FontSize="16" Padding="10">
                <DataGrid ItemsSource="{Binding SalesHistory}" AutoGenerateColumns="False" Margin="0,20,0,0" BorderThickness="1" BorderBrush="#E5E7EB" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID Ticket" Binding="{Binding Id}" Width="100"/>
                        <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="200"/>
                        <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <!-- Close Button -->
        <Button Grid.Row="2" Content="Cerrar" IsCancel="True" Margin="0,20,0,0" HorizontalAlignment="Right" Padding="20,10" Background="#64748B" Foreground="White" FontWeight="SemiBold" BorderThickness="0">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="6"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
