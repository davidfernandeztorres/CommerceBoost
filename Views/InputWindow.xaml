<Window x:Class="CommerceBoost.Views.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Entrada" Height="180" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="PromptText" Text="Introduzca valor:" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

        <TextBox x:Name="InputBox" Grid.Row="1" Height="30" VerticalContentAlignment="Center" Padding="5,0" Margin="0,0,0,15"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancelar" IsCancel="True" Padding="15,8" Margin="0,0,10,0" Background="#E5E7EB" Foreground="#374151" BorderThickness="0">
                 <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Aceptar" Click="Ok_Click" IsDefault="True" Padding="15,8" Background="#3B82F6" Foreground="White" FontWeight="SemiBold" BorderThickness="0">
                 <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
