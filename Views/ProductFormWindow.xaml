<Window x:Class="CommerceBoost.Views.ProductFormWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AÃ±adir Producto" Height="450" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="White">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nuevo Producto" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1">
            <TextBlock Text="Nombre:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="NombreBox" Height="30" VerticalContentAlignment="Center" Margin="0,0,0,15" Padding="5,0"/>

            <TextBlock Text="Precio:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="PrecioBox" Height="30" VerticalContentAlignment="Center" Margin="0,0,0,15" Padding="5,0"/>

            <TextBlock Text="Stock Inicial:" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox x:Name="StockBox" Height="30" VerticalContentAlignment="Center" Margin="0,0,0,15" Padding="5,0"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Cancelar" IsCancel="True" Padding="15,8" Margin="0,0,10,0" Background="#E5E7EB" Foreground="#374151" BorderThickness="0">
                 <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
            <Button Content="Guardar" Click="Save_Click" IsDefault="True" Padding="15,8" Background="#10B981" Foreground="White" FontWeight="SemiBold" BorderThickness="0">
                 <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="4"/>
                    </Style>
                </Button.Resources>
            </Button>
        </StackPanel>
    </Grid>
</Window>
