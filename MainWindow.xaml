<Window x:Class="CommerceBoost.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:CommerceBoost.Views"
        Title="CommerceBoost TPV" Height="800" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#F1F5F9">
    
    <Window.Resources>
        <!-- Styles moved to App.xaml -->
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="120"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="20,0">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="📦" FontSize="24" Margin="0,0,10,0"/>
                <TextBlock Text="CommerceBoost TPV" FontSize="20" FontWeight="SemiBold" Foreground="#1F2937"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Grid.Column="0" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Default TPV View -->
            <StackPanel x:Name="DefaultTPVView" Grid.Row="0" Grid.RowSpan="2">
                <TextBlock Text="Ticket de Venta" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,10" Foreground="#374151"/>
                
                <!-- Scanner Simulation Controls -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="Cantidad:" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#374151"/>
                    <TextBox x:Name="QuantityInput" 
                             Text="{Binding ScanQuantity, UpdateSourceTrigger=PropertyChanged}" 
                             Width="80" 
                             Height="40"
                             FontSize="16"
                             VerticalContentAlignment="Center"
                             Padding="10,0"
                             BorderBrush="#E5E7EB"
                             BorderThickness="1"/>
                    <Button Content="🔍 ESCANEAR PRODUCTO" 
                            Command="{Binding ScanProductCommand}" 
                            Background="#10B981" 
                            Foreground="White"
                            FontSize="16"
                            FontWeight="SemiBold"
                            Padding="20,10"
                            Margin="15,0,0,0"
                            Height="40"
                            BorderThickness="0"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" 
                                        CornerRadius="6"
                                        Padding="{TemplateBinding Padding}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#059669"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter Property="Background" Value="#047857"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
                
                <DataGrid x:Name="SalesGrid" ItemsSource="{Binding CurrentSaleItems}" 
                          AutoGenerateColumns="False" CanUserAddRows="False" 
                          GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                          BorderThickness="0" Background="White" RowHeight="45"
                          SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="CÓDIGO" Binding="{Binding Product.Codigo}" Width="120" IsReadOnly="True"/>
                        <DataGridTextColumn Header="NOMBRE" Binding="{Binding Product.Nombre}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="CANTIDAD" Binding="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" Width="100"/>
                        <DataGridTextColumn Header="PRECIO UNIT." Binding="{Binding UnitPrice, StringFormat=C2, UpdateSourceTrigger=PropertyChanged}" Width="120"/>
                        <DataGridTextColumn Header="PRECIO DESC." Binding="{Binding DiscountedPrice, StringFormat=C2, Mode=OneWay}" Width="120" IsReadOnly="True"/>
                        <DataGridTextColumn Header="TOTAL" Binding="{Binding TotalPrice, StringFormat=C2, Mode=OneWay}" Width="120" IsReadOnly="True"/>
                    </DataGrid.Columns>
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#F9FAFB"/>
                            <Setter Property="Foreground" Value="#6B7280"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Padding" Value="12,8"/>
                            <Setter Property="BorderBrush" Value="#E5E7EB"/>
                            <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F3F4F6"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#DBEAFE"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>
                </DataGrid>
            </StackPanel>
        </Grid>

        <!-- Sidebar -->
        <Border Grid.Row="1" Grid.Column="1" Background="White" Padding="15" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="NAVEGACIÓN" FontSize="12" FontWeight="SemiBold" Foreground="#6B7280" Margin="0,0,0,10"/>
                
                <Button Content="Inventario" Command="{Binding NavigateInventoryCommand}" Style="{StaticResource SidebarButtonStyle}" Margin="0,0,0,10"/>
                <Button Content="Ventas" Command="{Binding NavigateSalesCommand}" Style="{StaticResource SidebarButtonStyle}" Margin="0,0,0,10"/>
                <Button Content="Ajustes" Command="{Binding NavigateSettingsCommand}" Style="{StaticResource SidebarButtonStyle}" Margin="0,0,0,20"/>
                
                <UniformGrid Columns="3" Rows="4">
                    <Button Content="7" Command="{Binding NumPadCommand}" CommandParameter="7" Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="8" Command="{Binding NumPadCommand}" CommandParameter="8" Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="9" Command="{Binding NumPadCommand}" CommandParameter="9" Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="4" Command="{Binding NumPadCommand}" CommandParameter="4" Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="5" Command="{Binding NumPadCommand}" CommandParameter="5" Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="6" Command="{Binding NumPadCommand}" CommandParameter="6" Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="1" Command="{Binding NumPadCommand}" CommandParameter="1" Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="2" Command="{Binding NumPadCommand}" CommandParameter="2" Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="3" Command="{Binding NumPadCommand}" CommandParameter="3" Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="0" Command="{Binding NumPadCommand}" CommandParameter="0" Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="." Command="{Binding NumPadCommand}" CommandParameter="." Style="{StaticResource NumPadButtonStyle}"/>
                    <Button Content="⌫" Command="{Binding NumPadCommand}" CommandParameter="⌫" Style="{StaticResource NumPadButtonStyle}"/>
                </UniformGrid>
            </StackPanel>
        </Border>

        <Border Grid.Row="2" Grid.ColumnSpan="2" Background="White" BorderBrush="#E5E7EB" BorderThickness="0,1,0,0" Padding="15,15">
            <UniformGrid Rows="1" Columns="9">
                <Button Content="Cobrar" Command="{Binding CobrarDirectoCommand}" Style="{StaticResource FooterButtonStyle}" Margin="3"/>
                <Button Content="Sin Ticket" Command="{Binding CobrarSinTicketCommand}" Style="{StaticResource FooterButtonStyle}" Margin="3"/>
                <Button Content="Tarjeta" Command="{Binding CobrarTarjetaCommand}" Style="{StaticResource FooterButtonStyle}" Margin="3"/>
                <Button Content="Reimprimir" Command="{Binding ReimprimirTicketCommand}" Style="{StaticResource FooterButtonStyle}" Margin="3"/>
                <Button Content="Descuento" Command="{Binding AplicarDescuentoCommand}" Style="{StaticResource FooterButtonStyle}" Margin="3"/>
                <Button Content="Borrar" Command="{Binding BorrarArticuloCommand}" Style="{StaticResource FooterButtonStyle}" Margin="3"/>
                <Button Content="Añadir" Command="{Binding AgregarArticuloCommand}" Style="{StaticResource FooterButtonStyle}" Margin="3"/>
                <Button Content="Más" Command="{Binding MasOpcionesCommand}" Style="{StaticResource FooterButtonStyle}" Margin="3"/>
                <Button Content="🔓 Cajón" Command="{Binding AbrirCajonCommand}" Background="#10B981" Foreground="White" FontWeight="SemiBold" FontSize="14" BorderThickness="0" Margin="3">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="6"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </UniformGrid>
        </Border>
    </Grid>
</Window>
